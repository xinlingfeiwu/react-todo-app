{
  "name": "react-todo-app",
  "private": false,
  "version": "1.7.0",
  "type": "module",
  "description": "简洁高效的待办事项管理工具，支持任务创建、编辑、删除和数据管理",
  "keywords": [
    "todo",
    "task-management",
    "productivity",
    "react",
    "pwa",
    "vite",
    "javascript",
    "responsive",
    "localStorage"
  ],
  "author": "Leo Liu <lovexinlingfeiwu@foxmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/xinlingfeiwu/react-todo-app.git"
  },
  "bugs": {
    "url": "https://github.com/xinlingfeiwu/react-todo-app/issues"
  },
  "homepage": "https://github.com/xinlingfeiwu/react-todo-app#readme",
  "scripts": {
    "dev": "vite",
    "build": "npm run generate-version && vite build",
    "build:prod": "npm run generate-version && NODE_ENV=production vite build",
    "generate-version": "chmod +x scripts/generate-version.sh && ./scripts/generate-version.sh",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "analyze": "vite build --mode analyze",
    "serve": "vite preview --port 4173",
    "update-check": "echo '检查应用更新功能已集成到应用中，启动应用即可体验'",
    "commit": "cz",
    "prepare": "husky",
    "version:patch": "npm version patch --no-git-tag-version && npm run build:prod",
    "version:minor": "npm version minor --no-git-tag-version && npm run build:prod",
    "version:major": "npm version major --no-git-tag-version && npm run build:prod",
    "release:patch": "npm run version:patch && npm run release:commit",
    "release:minor": "npm run version:minor && npm run release:commit",
    "release:major": "npm run version:major && npm run release:commit",
    "release:commit": "node scripts/release.js",
    "prepare-release": "npm run lint && npm run test && echo '✅ 发布前检查通过'",
    "test": "echo '⚠️  暂无测试用例，跳过测试' && exit 0",
    "prebuild:prod": "npm run prepare-release"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "husky": "^9.1.6",
    "terser": "^5.43.1",
    "vite": "^5.4.19"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
